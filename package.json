{
  "name": "work-schedule",
  "homepage": "https://jarivatoi.github.io/workschedule",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:netlify": "vite build --base=/",
    "build:github": "vite build --base=/workschedule/",
    "lint": "eslint .",
    "preview": "vite preview",
    "cap:build": "npm run build && npx cap copy && npx cap sync",
    "cap:android": "npm run cap:build && npx cap open android",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "android:dev": "npx cap run android --livereload",
    "android:build": "npm run build && npx cap copy android && npx cap sync android && cd android && ./gradlew assembleDebug",
    "android:release": "npm run build && npx cap copy android && npx cap sync android && cd android && ./gradlew assembleRelease",
    "deploy:netlify": "npm run build:netlify && netlify deploy --prod --dir=dist",
    "deploy:github": "npm run build:github && gh-pages -d dist",
    "deploy:both": "npm run deploy:netlify && npm run deploy:github"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.0",
    "@capacitor/app": "^7.0.1",
    "@capacitor/cli": "^7.4.0",
    "@capacitor/core": "^7.4.0",
    "@capacitor/keyboard": "^7.0.1",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "gsap": "^3.12.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "gh-pages": "^6.3.0",
    "globals": "^15.9.0",
    "netlify-cli": "^22.3.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
